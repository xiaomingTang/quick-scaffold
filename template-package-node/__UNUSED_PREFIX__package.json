{
  "name": "<%= scaffoldConfig.projectName %>",
  "description": "<%= scaffoldConfig.projectName %>",
  "version": "0.0.1",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint src       --ext .ts",
    "lint:fix": "eslint src --fix --ext .ts",
    "build": "yarn run lint && ttsc --newLine lf --project tsconfig-for-build.json",
    "build:watch": "           ttsc --newLine lf --project tsconfig-for-build.json --watch",
    "node": "node ./dist/index.js",
    "dev": "nodemon --watch src --watch test --ext ts --exec ts-node --project tsconfig-for-build.json src/index.ts",
    "start": "yarn run dev",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register --project tsconfig-for-build.json test/*.ts"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.0.6",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "assert": "^2.0.0",
    "chalk": "^4.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "ts-transform-paths": "^2.0.2",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^3.7.2"
  }
}
